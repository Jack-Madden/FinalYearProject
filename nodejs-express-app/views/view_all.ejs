<%- include('./layout.ejs') %>
</head>

<body class="center">
    <% if (auds.length > 0) { %>
        <% for (let audio of auds) { %>
            <h1>
                <%= audio.title %>
            </h1>
            <h2>
                <%= audio.author %>
            </h2>
            <form action="/playback/<%= audio._id %>" method="GET">
                <input type="hidden" name="_csrf" value="<%= token %>">
                <button class="btn" type="submit">Play</button>
            </form>
            <br>
            <% if (registered) { %>
            <form action="/delete/<%= audio._id %>" method="GET">
                <input type="hidden" name="_csrf" value="<%= token %>">
                <button class="btn" type="submit">Delete</button>
            </form>
            <% } %>
        <% } %>
    <% } else { %>
        <h1>
            Empty!
        </h1>
        <p>
            <form action="/upload" method="GET">
                <input type="hidden" name="_csrf" value="<%= token %>">
                <button class="btn" type="submit">Add File</button>
            </form>
        </p>
        <% } %>
</body>
</html>